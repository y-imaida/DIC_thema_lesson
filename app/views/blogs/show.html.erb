<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= User.find(@blog.user_id).name %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @blog.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @blog.content %>
    </p>

    <%= link_to 'Edit', edit_blog_path(@blog),class: 'btn btn-primary btn-block' %>
    |
    <%= link_to 'Back', blogs_path, class: 'btn btn-default btn-block' %>
  </div>
</div>
